<layout id="WatchFace">
    <drawable class="YAWFBackground" id="Background" />
    <drawable class="CustomDrawables.CenterDrawable" id="Center">
        <param name="locX">dc.getWidth() * .5</param>
        <param name="locY">dc.getHeight() * .4</param>
    </drawable>
    <drawable class="CustomDrawables.UpperCenterDrawable" id="UpperCenter">
        <param name="locX">dc.getWidth() * .5</param>
        <param name="locY">(dc.getHeight() * .4) - 56</param>
    </drawable>
</layout>